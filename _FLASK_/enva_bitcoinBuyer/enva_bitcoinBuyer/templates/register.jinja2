{%  extends "base.jinja2" %}
{% block title %} Register {% endblock %}
{%  block body %} 
<div class="container"> 
<h3>Register</h3>
<br />  
<form class="form form-horizontal"  id="add-form" role="form">
 
    <div class="form-group">
        <label  class="col-sm-3 control-label">Name</label>
        <div class="col-sm-6">
            <input   type="text" class="form-control"  
                placeholder="Name">
        </div>
    </div>
    <div class="form-group">
        <label   type="number" min="0" class="col-sm-3 control-label">Gender</label>
        <div class="col-sm-6">
            <select name="gender"  class="form-control"   >
                <option disabled selected value="">Gender</option>
                <option value="Female">Female</option>
                <option value="Male">Male</option>
            </select>
        </div>
    </div> 
        <div class="form-group">
                <label for="patientEmail" class="col-sm-3 control-label">Email</label>
                <div class="col-sm-6">
                    <input type="email" class="form-control"   placeholder="Email">
                </div>
            </div> 
<br />  
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-5 pull-right">   
            <a href="/home">  <button class="btn btn-default"  >Cancel</button> </a>  
            <a href="/home">  <button class="btn btn-default" >Save</button></a>
        </div>
    </div>
</form>
</div> 
 
 
</div>

{% endblock %}